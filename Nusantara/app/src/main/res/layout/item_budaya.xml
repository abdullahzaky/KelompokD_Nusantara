<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_margin="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:elevation="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_budaya"
            android:src="@drawable/sample_budaya"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_budaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_budaya"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/lokasi_budaya"
                android:layout_below="@id/name_budaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_lokasi" />
            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/samfot"/>

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>