<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_margin="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:elevation="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_budaya"
            android:src="@drawable/sample_budaya"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <LinearLayout
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">
            <ImageView
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_grade_black_24dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:layout_marginEnd="8dp"
                android:id="@+id/rating_budaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="32"/>
            <ImageView
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_comment_black_24dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:layout_marginEnd="8dp"
                android:id="@+id/komentar_budaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="32"/>
            <ImageView
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_share_black_24dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:id="@+id/share_budaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="32"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_budaya"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_budaya"
                android:textSize="22sp"/>
            <TextView
                android:id="@+id/lokasi_budaya"
                android:layout_below="@id/name_budaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_lokasi" />
            <ImageView
                android:id="@+id/user"
                android:layout_alignParentEnd="true"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/samfot"/>

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>